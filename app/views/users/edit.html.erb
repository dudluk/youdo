<% provide(:title, 'Update your details') %>
<h1>Update your details</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if flash[:successful_update]  %>
        <div class="alert alert-success">Your details has been updated</div>
    <% end %>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/errors', object: f.object %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :postal_address %>
          <%= f.text_area :postal_address , class: 'form-control' %>
        </div>
        <%= f.submit 'Update my details', class: 'btn btn-primary pull-right' %>
    <% end %>
  </div>
</div>